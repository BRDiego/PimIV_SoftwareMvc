@model Model.Reserva

@{
    ViewBag.Title = "Pesquisar Reservas";
}
@Styles.Render("~/Content/css")
<link href="~/DesignPaginas/Style/Reservas.css" rel="stylesheet" />
<link href="~/DesignPaginas/Style/CardPesquisarReservas.css" rel="stylesheet" />
@if (Model != null)
{
    <section>
        <div class="lista-resultados">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>
                            AQUI VEM O TIPO
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr class="success">
                                        <th>
                                            Check-In
                                        </th>
                                        <th>
                                            Check-Out
                                        </th>
                                        <th>
                                            Nº Adultos
                                        </th>
                                        <th>
                                            Nº Crianças
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @Model.CheckIn.ToShortDateString()
                                        </td>
                                        <td>
                                            @Model.CheckOut.ToShortDateString()
                                        </td>
                                        <td>
                                            @Model.Adultos
                                        </td>
                                        <td>
                                            @Model.Criancas
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>

                    </tr>
                    <tr>
                        <td class="total_reservar">
                            <span>Total 70.00</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="total_reservar">
                            <a>Reservar</a>
                        </td>
                    </tr>

                </tbody>
            </table>
            <br />
            <h3>
                Você pode fazer uma nova busca por reservas
                clicando <a href="#Reservas">aqui</a>
            </h3>
        </div>
    </section>

}
<section id="Reservas">
