@model Model.Reserva
@{
    ViewBag.Title = "Confirmar";
}
@Styles.Render("~/Content/css")
<div class="confirmacao">
<h2>Confirmar</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    Camas do quarto: @Model.Quarto.Tipo.NomeTipo | Quarto nº @Model.Quarto.Numero
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="success">
                                <th>
                                    Check-In
                                </th>
                                <th>
                                    Check-Out
                                </th>
                                <th>
                                    Nº Adultos
                                </th>
                                <th>
                                    Nº Crianças
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Model.CheckIn.ToShortDateString()
                                </td>
                                <td>
                                    @Model.CheckOut.ToShortDateString()
                                </td>
                                <td>
                                    @Model.Adultos
                                </td>
                                <td>
                                    @Model.Criancas
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>

            </tr>
            <tr>
                <td class="total_reservar">
                    <span>Total = R$ @Model.Despesas</span>
                </td>
            </tr>
            <tr>
                <td class="total_reservar">
                    <a href="@Url.Action("RegistrarReserva", "Reservas")">
                        Confirmar Reserva
                    </a>
                </td>
            </tr>

        </tbody>
    </table>
</div>

<style>
.confirmacao{
    margin-top: 100px;
    font-size: 1.2rem;
}
</style>

